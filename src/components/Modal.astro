---
import type { Person } from "../data/types";

interface Props {
  person: Person;
  id: string;
}

const { person, id } = Astro.props as Props;
---

<dialog id={id}>
  <main>
    <img class="photo" src={`/img/${person.imgName}`} alt={person.name} />
    <div class="details">
      <div class="title">
        <strong class="name">{person.name}</strong>
        <span
          >{
            person.company ? `${person.title} @ ${person.company}` : person.title
          }</span
        >
      </div>
      {person.bio && person.bio.map((bioLine) => <p>{bioLine}</p>)}
    </div>
  </main>
  <form method="dialog">
    <button>
      <img class="close" src="/img/icons/close.svg" />
    </button>
  </form>
</dialog>

<style>
  dialog {
    position: fixed;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    padding: 1rem;
    overflow: visible;
    border: 1rem solid var(--person-accent-color);
  }

  dialog::backdrop {
    position: fixed;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    background: rgba(0, 0, 0, 0.6);
  }

  button {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    padding: 0;
    appearance: none;
    border: 0px solid var(--color-neutral-light);
    border-radius: 999px;
    top: -2rem;
    right: -2rem;
    width: 3rem;
    height: 3rem;
    background: var(--person-accent-color);
    transition: border-width var(--speed-move) ease-out,
      outline-offset var(--speed-move) ease-out;
  }

  button:hover {
    border-width: 4px;
  }

  button:hover .close {
    transform: scale(1.2);
  }

  .close {
    width: 1.5rem;
    height: 1.5rem;
    transition: transform var(--speed-move) ease-out;
  }

  main {
    display: flex;
    gap: 1rem;
    max-height: 90vh;
    overflow: scroll;
  }
  
  p {
    margin: 0;
  }

  .photo {
    width: 300px;
    height: 300px;
  }

  .details {
    width: 500px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .title {
    display: flex;
    flex-direction: column;
  }

  .name {
    font-size: var(--font-size-lg);
  }

  @media screen and (max-width: 1200px) {
    .details {
      width: 350px;
    }
  }

  @media screen and (max-width: 756px) {
    .photo {
      width: 200px;
      height: 200px;
    }

    .details {
      width: auto;
    }
  }

  @media screen and (max-width: 550px) {
    main {
      flex-direction: column;
      align-items: center;
    }
    
    .title {
      text-align: center;
    }
  }
</style>
